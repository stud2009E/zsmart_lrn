<mvc:View
	controllerName="z.smart.lrn.controller.Main"
	xmlns:mvc="sap.ui.core.mvc"
	xmlns:core="sap.ui.core"
    xmlns="sap.m"
	xmlns:app="http://schemas.sap.com/sapui5/extension/sap.ui.core.CustomData/1"
	displayBlock="true">

    <Page title="Examples"
		class="sapUiContentPadding">
		<VBox>
			<Button text="sap.ui.comp.smartfilterbar.SmartFilterBar + sap.ui.comp.smarttable.SmartTable" 
				press=".showExample"
				app:route="smartFilterBar"
			/>
			
			<Button text="sap.ui.comp.smartform.SmartForm" 
				press=".showExample"
				app:route="smartForm"
			/>
			
			<Button text="sap.ui.comp.smartfield.SmartField" 
				press=".showExample"
				app:route="smartField"
			/>

			<Button text="sap.ui.comp.smartchart.SmartChart" 
				press=".showExample"
				app:route="smartChart"
			/>
		</VBox>
    </Page>

</mvc:View>